<Window x:Class="PhotoStudio.Windows.AddRoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PhotoStudio.Windows"
        mc:Ignorable="d"
        Title="AddRoleWindow"
        MaxHeight="250" MaxWidth="400"
        MinHeight="250" MinWidth="400">
    <Grid>
        <TextBlock Text="Добавление роли" FontSize="20" Margin="15"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Name" Style="{StaticResource StandardTextBlock}"/>
                <TextBox Name="RoleNameTextBox" Style="{StaticResource StandardTextBox}"/>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="AddRoleButton" Content="Добавить" Width="100" Height="25" Margin="5" Click="AddRoleButton_OnClick"/>
                <Button Name="CancelButton" Content="Отмена" Width="100" Height="25" Margin="5" Click="CancelButton_OnClick"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
