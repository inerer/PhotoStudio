<Application x:Class="PhotoStudio.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:local="clr-namespace:PhotoStudio"
             xmlns:modernWpf="http://schemas.modernwpf.com/2019"
             StartupUri="/Windows/MainWindow.xaml">
    <Application.Resources>
        
       
        
        <Style TargetType="TextBox" x:Key="StandardTextBox">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Height" Value="25"></Setter>
            <Setter Property="Width" Value="150"></Setter>
        </Style>
        
        <Style TargetType="PasswordBox" x:Key="StandardPasswordBox">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Height" Value="25"></Setter>
            <Setter Property="Width" Value="150"></Setter>
        </Style>
        
        <Style TargetType="TextBlock" x:Key="StandardTextBlock">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
            <Setter Property="Height" Value="25"></Setter>
            <Setter Property="Width" Value="100"></Setter>
        </Style>
        
    </Application.Resources>
</Application>
